#include <bits/stdc++.h>
using namespace std;
#define rep(i, n) for (int i = 0; i < (int)(n); i++)

int main() {
  int N;
  cin >> N;
  if ((N < 2) || (N > 3 * 10e5))
    exit(1);
  rep (i, N) {
    int f, s;
    cin >> f >> s;
    if ((f < 1) || (f > N))
      exit(1);
    if ((s < 2) || (s > 10e9))
      exit(1);
    if ((s % 2) == 1)
      exit(1);
  }
}
